# directory listing
alias ll='ls -l'
alias la='ls -A'
alias l='ls -CF'
# ssh aliases
alias assh='ssh -A'
alias twitter='twidge'
alias tweet='twidge update'
alias recent='twidge lsrecent'
alias tweets='watch -n 10 twidge lsrecent'
# NOTE: pass options to head
alias apt-fortune='apt-cache search . | rl | head'
