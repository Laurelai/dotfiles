# to reload: ctrl-meta :source ~/.screenrc
# uncomment for custom meta-key
#escape ^Ww

# general options
vbell off
startup_message off
defscrollback 10000
caption always "%{Mk}[%{Wk}%n%{Mk}]%{Mk}[%{Bk}%H%{Mk}][%{Bk}%t%{Mk}][%{Ck}%c - %d.%m.%Y%{Mk}]%83=%{Mk}[%{wk}Load: %l%{Mk}]"

# setup pre-defined work environment
screen -t repl 0
screen -t test 1
screen -t edit1 2
screen -t edit2 3
