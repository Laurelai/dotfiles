function proml {
local       BLUE="\[\033[1;34m\]"
local        PURPLE="\[\033[0;35m\]"
local  LIGHT_PURPLE="\[\033[0;35m\]"
local      WHITE="\[\033[1;37m\]"
local LIGHT_GRAY="\[\033[1;30m\]"
case $TERM in
    xterm*)
        TITLEBAR='\[\033]0;\u@\h:\w\007\]'
        ;;
    *)
        TITLEBAR=""
        ;;
esac

PS1="${TITLEBAR}\
$BLUE[$PURPLE\$(date +%H%M)$BLUE]\
$BLUE[$LIGHT_PURPLE\u@\h:\w$BLUE]\
$LIGHT_GRAY% $LIGHT_PURPLE"
PS2='> '
PS4='+ '
}

proml
